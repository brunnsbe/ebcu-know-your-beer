{
  "name": "ebcu-know-your-beer",
  "version": "1.0.0",
  "type": "module",
  "description": "Know Your Beer - EBCU consumer education campaign website",
  "scripts": {
    "dev": "concurrently \"npm run dev:11ty\" \"npm run dev:css\"",
    "dev:11ty": "eleventy --serve --watch",
    "dev:css": "tailwindcss -i src/assets/css/tailwind.css -o _site/assets/css/styles.css --watch",
    "build": "npm run build:css && npm run build:11ty",
    "build:11ty": "eleventy",
    "build:css": "tailwindcss -i src/assets/css/tailwind.css -o _site/assets/css/styles.css --minify",
    "clean": "rm -rf _site"
  },
  "keywords": [
    "beer",
    "consumer-education",
    "ebcu",
    "eleventy"
  ],
  "author": "EBCU",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "concurrently": "^9.1.0",
    "tailwindcss": "^3.4.17"
  }
}
