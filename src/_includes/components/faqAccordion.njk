{#
  FAQ Accordion Component
  Usage: {% set faqItems = faqs %}{% include "components/faqAccordion.njk" %}
  Expects: faqItems array with question and answer properties
#}
<div class="space-y-3">
  {% for item in faqItems %}
  <details class="group rounded border border-gray-200 overflow-hidden">
    <summary class="flex items-center justify-between cursor-pointer p-5 bg-white hover:bg-gray-50 transition-colors">
      <span class="font-medium text-gray-700 text-left pr-4">{{ item.question }}</span>
      <span class="flex-shrink-0 text-gray-400 group-open:rotate-180 transition-transform">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </span>
    </summary>
    <div class="px-5 pb-5 text-gray-600">
      <p>{{ item.answer }}</p>
    </div>
  </details>
  {% endfor %}
</div>
