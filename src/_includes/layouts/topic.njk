---
layout: layouts/base.njk
---

{% set topicData = topics | findBySlug(slug) %}

{# Topic header with blue background #}
<div class="bg-ebcu-blue pt-24 pb-12">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <nav class="text-sm text-white/70 mb-4">
      <a href="/read-the-label/" class="hover:text-white">Read the label</a>
      <span class="mx-2">/</span>
      <span class="text-white">{{ title }}</span>
    </nav>
    <h1 class="text-3xl sm:text-4xl font-bold text-white">{{ title }}</h1>
    {% if topicData.lead %}
    <p class="mt-4 text-lg text-white/90 max-w-2xl">{{ topicData.lead }}</p>
    {% endif %}
  </div>
</div>

<div class="mx-auto max-w-7xl px-4 sm:px-6 py-12">
  <article class="prose prose-lg max-w-none">
    {{ content | safe }}
  </article>

  {# More topics #}
  <footer class="border-t border-gray-200 pt-12 mt-16">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">More topics</h2>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {% for t in topics %}
        {% if t.slug != slug %}
        <a class="rounded-xl bg-ebcu-blue p-5 hover:bg-ebcu-blue-dark hover:shadow-md transition-all" href="/topics/{{ t.slug }}/">
          <h3 class="font-semibold text-white">{{ t.title }}</h3>
          <p class="text-sm text-white/90 mt-1">{{ t.lead }}</p>
        </a>
        {% endif %}
      {% endfor %}
    </div>
  </footer>
</div>
